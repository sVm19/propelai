{
    "version": 2,
    "builds": [
      {
        "src": "server/main.py",
        "use": "@vercel/python",
        "config": { 
          "maxLambdaSize": "15mb", 
          "runtime": "python3.9" 
        }
      },
      {
        "src": "client/next.config.mjs",
        "use": "@vercel/next"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/main.py"
      },
      {
        "src": "/(.*)",
        "dest": "client/$1"
      }
    ]
  }